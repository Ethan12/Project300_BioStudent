@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title.</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/StyleSheet.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/JavaScript.js" type="text/javascript"></script>
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--@Html.ActionLink("~/images/BioStudent_Logo.png", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo" })-->
                    @*<li>@Html.Partial("_LoginPartial")</li>*@
                </div>
                <!-- Lecturer Login and Reistration Links -->
                <div class="collapse navbar-collapse colorLinks" id="bs-example-navbar-collapse-1">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src='@Url.Content("~/images/BioStudent_Logo.png")' class="logo" />
                    </a>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.Partial("_LoginPartial")</li>

                    </ul>
                </div>
            </div>
        </nav>
    </div>
    @*--------------------------------------
        Home page content - Joanne
    *@
    <div class="backColour2">
        <section>
            @*<div id="mySlide"></div>
            *@
            <img class="img-responsive pictures" src="~/images/HomeImg.png" />
            <p class="greenText">BioStudent is an attendance system targetted toward lecturers in colleges and universities. To cut out the amount of time it takes to call role during class and to provide a convenient way for student attendance to be recorded, we've introduced BioStudent.</p>
        </section>
        <hr />
        <section>
            <img class="img-responsive pictures" src="~/images/Attendance.jpg" />
            <p class="pinkText">Record your student data quickly and easily</p>
        </section>
        <hr />
        <section>
            <img class="img-responsive pictures" src="~/images/LoginRegistrationImage.jpg" />
            <p class="blueText">Students can register and log-in at the bottom of the page</p>
        </section>
    </div>
    @*--------------------------------------*@

    <div class="container body-content">

        <footer class="row">
            <!--<p>&copy; @DateTime.Now.Year</p>-->
            <!-- Student Login and Reistration Links -->
            <div class="col-md-4 bottom studentLinks">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Student Register", "StudentRegister", "Student")</li>
                    <li>@Html.ActionLink("Student Login", "StudentLogin", "Student")</li>
                </ul>
            </div>
        </footer>
    </div>
</body>
</html>
