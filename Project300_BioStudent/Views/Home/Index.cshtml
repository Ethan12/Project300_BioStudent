@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/StyleSheet.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/JavaScript.js" type="text/javascript"></script>
</head>
<body onload="carousel()">
    <div>
        <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand colorLink" href="~/Views/Home/Index">
                        <img class="logo" src="~/images/BioStudent_Logo.png" />
                    </a>
                </div>
                <!-- Lecturer Login and Reistration Links -->
                <div class="collapse navbar-collapse colorLinks" id="bs-example-navbar-collapse-1">
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Lecture Register", "Register", "Account")</li>
                        <li>@Html.ActionLink("Lecture Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Lecture Profile", "LecturerProfile", "Account")</li>
                        <li>@Html.ActionLink("Test Frankie", "About", "Home")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    @*--------------------------------------
        Home page content - Joanne
    *@
    <div class="backColour2">
        <section>
            @*<div id="mySlide"></div>
            *@
            <img class="img-responsive pictures" src="~/images/HomeImg.png" />
            <p class="greenText">BioStudent is an attendance system targetted toward lecturers in colleges and universities. To cut out the amount of time it takes to call role during class and to provide a convenient way for student attendance to be recorded, we've introduced BioStudent.</p>
        </section>
        <hr />
        <section>
            <img class="img-responsive pictures" src="~/images/Attendance.jpg" />
            <p class="pinkText">Record your student data quickly and easily</p>
        </section>
        <hr />
        <section>
            <img class="img-responsive pictures" src="~/images/LoginRegistrationImage.jpg" />
            <p class="blueText">Students can register and log-in at the bottom of the page</p>
        </section>
    </div>
    @*--------------------------------------*@
</body>
</html>
