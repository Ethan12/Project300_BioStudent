@model IEnumerable<project300_biostudent.models.modules>
@{
    ViewBag.Title = "SetAttendance";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title.</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/StyleSheet.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--@Html.ActionLink("~/images/BioStudent_Logo.png", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo" })-->
                </div>
                <!-- Lecturer Login and Registration Links -->
                <div class="collapse navbar-collapse colorLinks" id="bs-example-navbar-collapse-1">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src='@Url.Content("~/images/BioStudent_Logo.png")' class="logo" />
                    </a>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
<div class="jumbotron backColour">
        <header class="headerStyle">
            <!--<div class="container">-->
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>Student Listing</h1>
                    </div>
                </div>
            </div>
        </header>
    </div>

    <div class="jumbotron backColour2">
        <div class="container">
            <ul class="nav nav-tabs">
                <li><a>@Html.ActionLink("Student List", "StudentList", "Account")</a></li>
                <li><a>@Html.ActionLink("Student Enroll", "EnrollStudent", "Account")</a></li>
                <li><a>@Html.ActionLink("Grades", "Grades", "Account")</a></li>
                <li><a>@Html.ActionLink("Attendance", "Attendance", "Account")</a></li>
            </ul>
        </div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken();
<h4>Module Name: </h4>
foreach (var items in Model){
@Html.DropDownList("ModName", new SelectList(Model.Distinct().ToList(), "ModuleName", "ModuleName", items.ModuleName));
}
<br />
<h4>Class Duration</h4>
<select id="ClassDuration" name="ClassDuration">
    <option value="30">Half Hour</option>
    <option selected="selected" value="60">Hour</option>
    <option value="90">Hour & A Half</option>
    <option value="120">Two Hours</option>
    <option value="150">Two & A Half Hours</option>
    <option value="180">Three Hours</option>
</select>
<input type="submit" value="Set Attendance" />
}




        <div class="container body-content">
            <hr />
            <footer class="row">
                <!--<p>&copy; @DateTime.Now.Year</p>-->
                <!-- Student Login and Reistration Links -->
                <div class="col-md-4 bottom studentLinks">
                    <ul class="nav navbar-nav pull-right">
                        @*<li>@Html.ActionLink("Student Register", "StudentRegister", "Student")</li>
                            <li>@Html.ActionLink("Student Login", "StudentLogin", "Student")</li>*@
                    </ul>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
