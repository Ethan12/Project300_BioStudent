@model Project300_BioStudent.Models.ApplicationUser
@{
    ViewBag.Title = "LecturerProfile";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title.</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/StyleSheet.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--@Html.ActionLink("~/images/BioStudent_Logo.png", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo" })-->
                </div>
                <!-- Lecturer Login and Reistration Links -->
                <div class="collapse navbar-collapse colorLinks" id="bs-example-navbar-collapse-1">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src='@Url.Content("~/images/BioStudent_Logo.png")' class="logo" />
                    </a>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.Partial("_LoginPartial")</li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
<!-- Profile Image and Information Display -->
    <div class="jumbotron backColour">
    <div>
        <header class="headerStyle">
            <!--<div class="container">-->
            <div class="row">
                <div class="col-lg-2 col-lg-offset-2 col-md-5 col-md-offset-1">
                <!--<div class="profileImg col-md-5">-->
                <section>
                    <div class="profileImg">
                        <img src="@Url.Action("UserPhotos", "Account" )" style="width:320px;height:320px;
                                margin-top:100px;
                                -moz-border-radius: 60px;
                                border-radius: 100px;
                                text-align:left;
                                padding: 6px;
                                box-shadow: 0px 0px 20px #CCC;" />
                    </div>
                </section>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-md-8 col-md-offset-1 profileInfo">
                <!--<div class="profileInfo col-md-7">-->  
                    <section>  
                    <legend><i>Name:</i>
                    <p>@Html.DisplayFor(model => model.FullName)</p></legend>
                    <legend><i>Teaching Field:</i>
                    <p>@Html.DisplayFor(model => model.TeachingField)</p></legend>
                    <legend><i>Institute:</i>
                    <p>@Html.DisplayFor(model => model.Institute)</p></legend>
                    </section>
                </div>
            </div>
            <!--
            </div>
            -->
        </header>
    </div>
</div>

<!----------------------------------------->

    <div class="jumbotron backColour2">
        <div class="container">
            <ul class="nav nav-tabs">
                <li>@Html.ActionLink("Student List", "StudentList", "Account")</li>
                <li>@Html.ActionLink("Student Enroll", "EnrollStudent", "Account")</li>
                <li>@Html.ActionLink("Grades", "Grades", "Account")</li>
                <li>@Html.ActionLink("Attendance", "Attendance", "Account")</li>
            </ul>
        </div>

        <div class="container body-content">
            <hr />
            <footer class="row">
                <!--<p>&copy; @DateTime.Now.Year</p>-->
                <!-- Student Login and Reistration Links -->
                <div class="col-md-4 bottom studentLinks">
                    <ul class="nav navbar-nav pull-right">
                        @*<li>@Html.ActionLink("Student Register", "StudentRegister", "Student")</li>
                            <li>@Html.ActionLink("Student Login", "StudentLogin", "Student")</li>*@
                    </ul>
                </div>
            </footer>
        </div>
    </div>
</body>
</html>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
