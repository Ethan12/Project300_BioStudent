@model Project300_BioStudent.Models.ApplicationUser
@{
    ViewBag.Title = "LecturerProfile";
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title.</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/styles/StyleSheet.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.1.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</head>
<body>
    <div>
        <nav class="navbar navbar-default navbar-custom navbar-fixed-top">
            <div class="container">
                <div class="navbar-header page-scroll">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <!--@Html.ActionLink("~/images/BioStudent_Logo.png", "Index", "Home", new { area = "" }, new { @class = "navbar-brand logo" })-->

                </div>
                <!-- Lecturer Login and Reistration Links -->
                <div class="collapse navbar-collapse colorLinks" id="bs-example-navbar-collapse-1">
                    <a href='@Url.Action("Index", "Home")'>
                        <img src='@Url.Content("~/images/BioStudent_Logo.png")' class="logo" />
                    </a>
                    <ul class="nav navbar-nav navbar-right">
                        <li>@Html.ActionLink("Lecture Register", "Register", "Account")</li>
                        <li>@Html.ActionLink("Lecture Login", "Login", "Account")</li>

                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="jumbotron backColour">
        <header class="headerStyle">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="page-heading">
                        <h1>
                            <img src="@Url.Action("UserPhotos", "Account" )" style="width:160px;height:160px;
                    margin: auto;
                    -moz-border-radius: 60px;
                    border-radius: 100px;
                    padding: 6px;
                    box-shadow: 0px 0px 20px #888;" />
                        </h1>

                    </div>
                </div>
            </div>
        </header>
        <div>
            <dl class="dl-horizontal">
                <dt>
                    Name:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.FullName)
                </dd>
                <dt>
                    Institute:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Institute)
                </dd>
                <dt>
                    Teaching Field:
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.TeachingField)
                </dd>
            </dl>
        </div>
    </div>
<div class="jumbotron backColour2">
        <div class="container">            
            <ul class="nav nav-tabs">
                <li><a>@Html.ActionLink("Student List", "StudentList", "Account")</a></li>
                <li><a>@Html.ActionLink("Student Enroll", "EnrollStudent", "Account")</a></li>
                <li><a>@Html.ActionLink("Grades", "Grades", "Account")</a></li>
                <li><a>@Html.ActionLink("Attendance", "Attendance", "Account")</a></li>
                <!--<li class="active"><a href="RAD.aspx">RAD</a></li>-->

            </ul>
        </div>
    <div class="container body-content">
        <hr />
        <footer class="row">
            <!--<p>&copy; @DateTime.Now.Year</p>-->
            <!-- Student Login and Reistration Links -->
            <div class="col-md-4 bottom studentLinks">
                <ul class="nav navbar-nav pull-right">
                    <li>@Html.ActionLink("Student Register", "StudentRegister", "Student")</li>
                    <li>@Html.ActionLink("Student Login", "StudentLogin", "Student")</li>
                </ul>
            </div>
        </footer>
    </div>
    </div>
    </body>
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
